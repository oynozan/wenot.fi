{
    "compilerOptions": {
        "outDir": "./build/dist",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": false,
        "allowJs": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "./config-overrides.js",
        // "./webpack.config.js",
    ],
    "types": [
        "typePatches"
    ]
}